"use client";

import { useEffect, useState } from "react";

interface CryptoData {
  coins_count: number;
  active_markets: number;
  total_mcap: number;
  total_volume: number;
  btc_d: string;
  eth_d: string;
  mcap_change: string;
  volume_change: string;
  avg_change_percent: string;
  volume_ath: number;
  mcap_ath: number;
}

export default function CryptoDashboard() {
  const [data, setData] = useState<CryptoData | null>(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);

  useEffect(() => {
    async function fetchData() {
      try {
        const response = await fetch("https://api.coinlore.net/api/global/");
        const result = await response.json();
        setData(result[0]);
        setLoading(false);
      } catch (err) {
        setError("Failed to fetch crypto data");
        setLoading(false);
      }
    }

    fetchData();
    // Refresh every 30 seconds
    const interval = setInterval(fetchData, 30000);
    return () => clearInterval(interval);
  }, []);

  if (loading) {
    return (
      <div className="min-h-screen bg-gradient-to-br from-gray-900 to-gray-800 flex items-center justify-center">
        <div className="text-white text-xl">Loading crypto data...</div>
      </div>
    );
  }

  if (error || !data) {
    return (
      <div className="min-h-screen bg-gradient-to-br from-gray-900 to-gray-800 flex items-center justify-center">
        <div className="text-red-400 text-xl">{error || "No data available"}</div>
      </div>
    );
  }

  const formatNumber = (num: number) => {
    return new Intl.NumberFormat("en-US", {
      style: "currency",
      currency: "USD",
      notation: "compact",
      maximumFractionDigits: 2,
    }).format(num);
  };

  const formatChange = (change: string) => {
    const num = parseFloat(change);
    const isPositive = num >= 0;
    return (
      <span className={isPositive ? "text-green-400" : "text-red-400"}>
        {isPositive ? "+" : ""}
        {change}%
      </span>
    );
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-gray-900 via-blue-900 to-gray-900 p-8">
      <div className="max-w-6xl mx-auto">
        <div className="text-center mb-12">
          <h1 className="text-5xl font-bold text-white mb-4">
            ðŸª™ Crypto Market Overview
          </h1>
          <p className="text-gray-300 text-lg">
            Real-time global cryptocurrency market statistics
          </p>
        </div>

        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
          {/* Total Market Cap */}
          <div className="bg-white/10 backdrop-blur-lg rounded-2xl p-6 border border-white/20 hover:bg-white/15 transition">
            <div className="text-gray-400 text-sm mb-2">Total Market Cap</div>
            <div className="text-3xl font-bold text-white mb-2">
              {formatNumber(data.total_mcap)}
            </div>
            <div className="text-sm">
              Change: {formatChange(data.mcap_change)}
            </div>
          </div>

          {/* 24h Volume */}
          <div className="bg-white/10 backdrop-blur-lg rounded-2xl p-6 border border-white/20 hover:bg-white/15 transition">
            <div className="text-gray-400 text-sm mb-2">24h Volume</div>
            <div className="text-3xl font-bold text-white mb-2">
              {formatNumber(data.total_volume)}
            </div>
            <div className="text-sm">
              Change: {formatChange(data.volume_change)}
            </div>
          </div>

          {/* Bitcoin Dominance */}
          <div className="bg-white/10 backdrop-blur-lg rounded-2xl p-6 border border-white/20 hover:bg-white/15 transition">
            <div className="text-gray-400 text-sm mb-2">Bitcoin Dominance</div>
            <div className="text-3xl font-bold text-orange-400 mb-2">
              {data.btc_d}%
            </div>
            <div className="text-sm text-gray-400">BTC market share</div>
          </div>

          {/* Ethereum Dominance */}
          <div className="bg-white/10 backdrop-blur-lg rounded-2xl p-6 border border-white/20 hover:bg-white/15 transition">
            <div className="text-gray-400 text-sm mb-2">Ethereum Dominance</div>
            <div className="text-3xl font-bold text-purple-400 mb-2">
              {data.eth_d}%
            </div>
            <div className="text-sm text-gray-400">ETH market share</div>
          </div>

          {/* Active Coins */}
          <div className="bg-white/10 backdrop-blur-lg rounded-2xl p-6 border border-white/20 hover:bg-white/15 transition">
            <div className="text-gray-400 text-sm mb-2">Active Coins</div>
            <div className="text-3xl font-bold text-white mb-2">
              {data.coins_count.toLocaleString()}
            </div>
            <div className="text-sm text-gray-400">Total cryptocurrencies</div>
          </div>

          {/* Active Markets */}
          <div className="bg-white/10 backdrop-blur-lg rounded-2xl p-6 border border-white/20 hover:bg-white/15 transition">
            <div className="text-gray-400 text-sm mb-2">Active Markets</div>
            <div className="text-3xl font-bold text-white mb-2">
              {data.active_markets.toLocaleString()}
            </div>
            <div className="text-sm text-gray-400">Trading pairs</div>
          </div>
        </div>

        {/* Additional Stats */}
        <div className="bg-white/10 backdrop-blur-lg rounded-2xl p-6 border border-white/20">
          <h2 className="text-2xl font-bold text-white mb-4">Market Records</h2>
          <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <div className="text-gray-400 text-sm">All-Time High Market Cap</div>
              <div className="text-xl font-bold text-white">
                {formatNumber(data.mcap_ath)}
              </div>
            </div>
            <div>
              <div className="text-gray-400 text-sm">All-Time High Volume</div>
              <div className="text-xl font-bold text-white">
                {formatNumber(data.volume_ath)}
              </div>
            </div>
          </div>
        </div>

        <div className="text-center mt-8 text-gray-400 text-sm">
          Data updates every 30 seconds â€¢ Powered by CoinLore API
        </div>
      </div>
    </div>
  );
}
